<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="23dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/customer_photo_icon"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/phone"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/customer_phone_iocn"
                android:layout_gravity="center_vertical"
                android:visibility="visible" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_dddddd_stroke_20_round_rect"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="4dp">

                <EditText
                    android:id="@+id/input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入您要咨询的问题"
                    android:maxHeight="90dp"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/send"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/customer_send_default" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>