<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="178dp"
    android:background="@drawable/bg_round_solid_rect">

    <TextView
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#000000"
        android:text="添加新账户"/>

    <TextView
        android:id="@+id/sub_title"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="13sp"
        android:text="请输入账户密钥.例: NJS8W4NGWWTG5"
        />
    <EditText
        android:layout_below="@id/sub_title"
        android:layout_marginTop="17dp"
        android:id="@+id/password_input"
        android:layout_centerHorizontal="true"
        android:layout_width="238dp"
        android:layout_height="25dp"
        android:background="@drawable/bg_round_stroke_1_rect"
        android:hint="请输入要账户密钥"
        android:textColorHint="#c7c7c7"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textCursorDrawable="@drawable/edit_cursor_426bf2"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0d000050"
        android:layout_below="@id/password_input"
        android:layout_marginTop="22dp"
        />

    <TextView
        android:id="@+id/negative_txt"
        android:layout_below="@id/line"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        android:textColor="#007aff"
        android:gravity="center_horizontal"
        android:text="取消"/>
    <View
        android:id="@+id/separate_line"
        android:layout_width="1dp"
        android:layout_height="44dp"
        android:layout_toRightOf="@id/negative_txt"
        android:layout_below="@id/line"
        android:background="#0d000050"
        />
    <TextView
        android:id="@+id/positive_txt"
        android:layout_toRightOf="@id/separate_line"
        android:layout_below="@id/line"
        android:layout_width="135dp"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        android:textColor="#007aff"
        android:gravity="center_horizontal"
        android:text="确定"/>


</RelativeLayout>