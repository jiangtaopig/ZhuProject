<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_f6f6f6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/domestic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_50e2ff"
                android:gravity="center"
                android:text="国内/港澳台"
                android:textSize="@dimen/dimen_24sp" />

            <TextView
                android:id="@+id/international"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_401eb371"
                android:gravity="center"
                android:text="国际"
                android:textSize="@dimen/dimen_24sp" />

        </LinearLayout>

        <View
            android:id="@+id/tab_line"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_below="@id/tab_layout"
            android:layout_width="@dimen/dimen_130dp"
            android:layout_height="@dimen/dimen_2dp"
            android:background="@color/color_8f66ff" />
    </RelativeLayout>

    <com.example.za_zhujiangtao.zhupro.widget.DoubleSeekBar
        android:id="@+id/double_seekbar"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.za_zhujiangtao.zhupro.widget.DoubleSeekBar>

    <Button
        android:id="@+id/set_seekbar_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:textSize="22sp"
        android:text="set seekBar value">

    </Button>

    <com.example.za_zhujiangtao.zhupro.widget.TabLayout
        android:id="@+id/city_tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:left_title="国内/港澳台"
        app:left_title_appearance="@style/font_14sp_333333"
        app:right_title="国际"
        app:right_title_appearance="@style/font_14sp_999999">

    </com.example.za_zhujiangtao.zhupro.widget.TabLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textSize="@dimen/dimen_16sp"
        ></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:background="#888888">


        <ImageView
            android:id="@+id/img"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="#ff0000"/>

        <TextView
            android:id="@+id/my_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/dimen_16sp"
            android:textColor="#ffffff"
            android:text="上海半岛酒店上海半岛酒店上海半岛酒店上海半岛酒店上…"
            android:layout_toRightOf="@id/img"
            android:layout_marginLeft="@dimen/dimen_8dp"
            />

    </RelativeLayout>



</LinearLayout>
