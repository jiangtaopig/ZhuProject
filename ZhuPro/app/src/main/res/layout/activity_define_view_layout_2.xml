<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:text="自定义view"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:background="@color/color_f6f6f6"/>

    <com.example.za_zhujiangtao.zhupro.define_view.TestView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1Test1"
        android:padding="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_24sp"
        >

    </com.example.za_zhujiangtao.zhupro.define_view.TestView>

    <com.example.za_zhujiangtao.zhupro.define_view.TestViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_ffaa00"
        android:padding="@dimen/dimen_10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_18sp"
            android:text="111"
            android:textColor="@color/white"
            android:background="@color/color_666666"
            android:gravity="center">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_18sp"
            android:background="@color/color_666666"
            android:text="222"
            android:textColor="@color/white"
            android:layout_margin="@dimen/dimen_5dp"
            android:gravity="center">

        </TextView>

        <com.example.za_zhujiangtao.zhupro.define_view.TestView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234"
            android:padding="@dimen/dimen_10dp"
            android:textSize="@dimen/dimen_24sp"
            ></com.example.za_zhujiangtao.zhupro.define_view.TestView>


    </com.example.za_zhujiangtao.zhupro.define_view.TestViewGroup>

    <Button
        android:id="@+id/test_thread_pool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test thread pool"
        android:textSize="@dimen/dimen_24sp"/>

    <com.example.za_zhujiangtao.zhupro.define_view.TestView2
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_60dp"
        android:textSize="@dimen/dimen_20sp"
        android:text="EEE"/>

    <com.example.za_zhujiangtao.zhupro.define_view.TestCanvas
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_e1edfa"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_5dp"/>

</LinearLayout>