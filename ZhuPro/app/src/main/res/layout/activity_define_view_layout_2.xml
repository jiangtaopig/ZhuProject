<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/color_f6f6f6"
        android:gravity="center"
        android:text="自定义view"
        android:textColor="@color/color_333333"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <com.example.za_zhujiangtao.zhupro.define_view.TestView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp"
            android:text="1Test1"
            android:textSize="@dimen/dimen_24sp">

        </com.example.za_zhujiangtao.zhupro.define_view.TestView>

        <com.example.za_zhujiangtao.zhupro.define_view.TestViewGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_ffaa00"
            android:visibility="gone"
            android:padding="@dimen/dimen_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_666666"
                android:gravity="center"
                android:text="111"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:background="@color/color_666666"
                android:gravity="center"
                android:text="222"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp">

            </TextView>

            <com.example.za_zhujiangtao.zhupro.define_view.TestView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:text="1234"
                android:textSize="@dimen/dimen_24sp">

            </com.example.za_zhujiangtao.zhupro.define_view.TestView>


        </com.example.za_zhujiangtao.zhupro.define_view.TestViewGroup>

        <com.example.za_zhujiangtao.zhupro.define_view.MyFlowLayout
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="wrap_content"
            android:background="@color/color_fddddd"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_666666"
                android:gravity="center"
                android:text="555"
                android:layout_margin="@dimen/dimen_5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:background="@color/color_666666"
                android:gravity="center"
                android:text="666"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_666666"
                android:gravity="center"
                android:layout_margin="@dimen/dimen_5dp"
                android:text="77777777"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:background="@color/color_666666"
                android:gravity="center"
                android:text="88888888"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:background="@color/color_666666"
                android:gravity="center"
                android:text="999999999999"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp"/>

        </com.example.za_zhujiangtao.zhupro.define_view.MyFlowLayout>

        <com.example.za_zhujiangtao.zhupro.define_view.TestView2
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60dp"
            android:text="EEE"
            android:textSize="@dimen/dimen_20sp" />

        <com.example.za_zhujiangtao.zhupro.define_view.TestCanvas
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@color/color_e1edfa" />

        <com.example.za_zhujiangtao.zhupro.define_view.XfermodeView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_400dp"></com.example.za_zhujiangtao.zhupro.define_view.XfermodeView>

    </LinearLayout>

    <com.example.za_zhujiangtao.zhupro.define_view.GuaguaLeView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.za_zhujiangtao.zhupro.define_view.GuaguaLeView>

    <com.example.za_zhujiangtao.zhupro.define_view.WritingBoardView
        android:id="@+id/writing_board_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>